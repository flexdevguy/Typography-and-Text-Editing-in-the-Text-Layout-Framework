<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:mx="library://ns.adobe.com/flex/halo">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="selected"/>
	</s:states>

	<s:Rect top="1"
			bottom="1"
			left="1"
			right="1">
		<s:fill>
			<s:SolidColor color="{ data as uint }"/>
		</s:fill>
	</s:Rect>
	
	<s:Rect top="1"
			bottom="1"
			left="1"
			right="1">
		<s:stroke>
			<s:SolidColorStroke color="0x666666" weight="1"/>
		</s:stroke>
	</s:Rect>

	<s:Rect top="0"
			bottom="0"
			left="0"
			right="0"
			includeIn="hovered">
		<s:fill>
			<s:SolidColor color="0x666666"
						  alpha="0.4"/>
		</s:fill>
	</s:Rect>

</s:ItemRenderer>
